
<section class="inner">
	<h2 class="section-ttl">ジャンル管理</h2>
	<div class="mb3">
		<h3>ジャンル新規登録</h3>
	<%= form_with model:@genre, url: genres_path do |f| %>
	<%= f.label :name, "ジャンル名:" %>
	<%= f.text_field :name %>
	<%= f.submit '登録', class: "btn btn-primary ml2" %>
<% end %>
	</div>
	<div class="mb3">
		<h3>ジャンル一覧</h3>
		<table class="genre_info has_border">
			<thead>
				<tr>
					<th>ジャンル名</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td class="text-center">
						  <%= link_to "編集", edit_genre_path(genre), class: "btn btn-success" %>
						  <%= link_to "削除", genre_path(genre.id), method: :delete, "data-confirm" => "削除します。本当によろしいですか？", class: "btn btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</section>

