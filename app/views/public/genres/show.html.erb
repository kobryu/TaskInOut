
<div class ="container">
  <h2>検索結果</h2>
    <table id="dtBasicExample" class="table" cellspacing="0" width="100%">
    <thead>
        <tr>
        	<th class="th-sm">ID
        	</th>
          <th class="th-sm">件名
          <th class="th-sm">内容
          </th>
          <th class="th-sm">納期
          </th>
          <th class="th-sm">担当者
          </th>
          <th class="th-sm">機能
          </th>
        </tr>
      </thead>
      <tbody>
    			<% @genre.tasks.each do |task| %>
    				<tr>
    					<td><%= task.id %></td>
    					<td ><%= task.title %></td>
    					<td><%= task.body %></td>
    					<td><%= task.due_date %></td>
    					<td><%= task.person_name %></td>
    					<td>
    						<%= link_to "詳細", task_path(task), class: "btn btn-primary" %>
    					</td>
    				</tr>
    			<% end %>
      		</tbody>
    		</table>

  <%= link_to '一覧へ', genres_path %>
</div>