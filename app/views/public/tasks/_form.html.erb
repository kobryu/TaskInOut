<div style="margin-top : 100px">
<%= form_with model:task, local:true do |f| %>
	<div class="field">
		<%= f.label :title, "件名" %>
		<%= f.text_field :title, autocomplete: "title", placeholder: "件名", class: "title" %>
	</div>
	<div class="field">
		<%= f.label :body, "内容" %>
		<%= f.text_field :body, autocomplete: "body", placeholder: "内容", class: "content" %>
	</div>
	<div class="field">
    <%=  f.label :due_date, class: 'control-label'%>
    <%=  f.date_field :due_date, class: 'form-control'%>
	</div>
		<%= f.submit class: 'btn btn-success' %>
<% end %>
</div>