
  <%= render 'form', task: @task %>

	<table class="tasks mt2 has_border">
		<thead>
			<tr>
				<th>件名</th>
				<th>内容</th>
				<th>納期</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
	<table id="dtBasicExample" class="table" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">件名
      </th>
      <th class="th-sm">内容
      </th>
      <th class="th-sm">納期
      </th>

    </tr>
  </thead>
  <tbody>
			<% @tasks.each do |task| %>
				<tr class="t-head">
					<td class="text-center"><%= task.title %></td>
					<td><%= task.body %></td>
					<td><%= task.due_date %></td>
					<td><%= render "public/favorites/btn", task: task %></td>
					<td>
						コメント数: <%= task.post_comments.count %>
						<%= link_to "詳細", task_path(task), class: "btn btn-primary" %>
						<%= link_to "編集", edit_task_path(task), class: "btn btn-success" %>
						<%= link_to "削除", task_path(task), method: :delete, "data-confirm" => "削除します。本当によろしいですか？", class: "btn btn-danger" %>
					</td>
				</tr>
			<% end %>
  </tbody>
</table>



