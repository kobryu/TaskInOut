<div class="box1">
  <div class="box-inner">
    <h1>New account</h1>

    <%= form_with model: @user, url: registration_path(resource_name),  id: 'new_user', class: 'new_user',local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

      <div class="box-name">
        <%= f.label :"名前(name)" %>
        <%= f.label :"(姓_family)" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :"名前(name)" %>
        <%= f.label :"(名_first)" %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
       <div class="box-name">
        <%= f.label :"フリガナ(Furigana)" %>
        <%= f.label :"(セイ_furigana_family)" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.label :"フリガナ(Furigana)" %>
        <%= f.label :"(メイ_furigana_first)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
      <div class="box-email">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "true" %>
      </div>
        <div class="box-email">
        <%= f.label :"Phone number（without hyphen）" %>
        <%= f.text_field :telephone_number, autocomplete: true %>
      </div>

      <div class="box-password">
        <%= f.label :"Password" %>
        <% if @minimum_password_length %>
        <em>(More than <%= @minimum_password_length %> Letters)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="box-password">
        <%= f.label :"password confirmation" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="box-login">
        <%= f.submit "Registration" %>
      </div>
    <% end %>
    <div class="box-newusr">
      <p><span>------------</span> Already created account? <span>------------</span></p>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>

