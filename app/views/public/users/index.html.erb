
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User information</h2>
        <table class='table'>
          <tr>
        	  <th>Name</th>
        	  <th><%= current_user.full_name %></th>
          </tr>
          <tr>
        	  <th>Introduction</th>
        	  <th><%= current_user.introduction %></th>
          </tr>
        </table>

        <div class='row'>
          <%= link_to users_mypage_edit_path, class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      </div>
      <div class='col-md-8'>
        <table class='table'>
          <thead>
            <tr>
            <th>ID</th>
        		<th>Name</th>
        		<th>Furigana</th>
        		<th>E-mail</th>
        		<th>Phone number</th>
        		<th>Introduction</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.full_name %></td>
                <td><%= user.full_name_kana %></td>
                <td><%= user.email %></td>
                <td><%= user.telephone_number %></td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


